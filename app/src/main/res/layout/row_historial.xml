<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="40dp"
    android:background="@drawable/border_color_recyclerview"
    android:orientation="vertical"
    android:padding="8dp"
    android:paddingLeft="4dp"
    android:paddingTop="4dp"
    android:paddingRight="4dp"
    android:paddingBottom="4dp">

    <TextView
        android:id="@+id/fechaEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_tv_rows"
        android:padding="4dp"
        android:textAlignment="center"
        android:textColor="#FFC107"
        android:textSize="24sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/nombreEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_tv_rows"
        android:padding="4dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textSize="20sp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/pesoEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_tv_rows"
        android:padding="4dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/repeticionesEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_tv_rows"
        android:padding="4dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/seriesEjercicio"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@drawable/border_tv_rows"
        android:padding="4dp"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textStyle="bold" />

</LinearLayout>